@inherits ReactiveLayoutComponentBase<MainLayoutViewModel>

@inject ISnackbar Snackbar
@inject MainLayoutViewModel MainVm

<MudThemeProvider Theme="App.Theme" @bind-IsDarkMode="ViewModel!.IsDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MainAppBar />
    <NavMenu />
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {

    public MainLayout() {
        this.WhenActivated(disposables => {
            ViewModel = MainVm;
            ViewModel.Notifications
                     .Subscribe(m => Snackbar.Add(m.Message, m.Severity,
                          m.Severity is Severity.Error or Severity.Warning ? RequireInteraction : null))
                     .DisposeWith(disposables);
        });
    }

    void RequireInteraction(SnackbarOptions opts) => opts.RequireInteraction = true;

}