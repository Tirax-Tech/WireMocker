@inherits ReactiveComponentBase<ShellViewModel>
@inject ShellViewModel Shell

<MudAppBar Elevation="1">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
    <SectionOutlet SectionName="appbar-title"/>
    <MudSpacer />
    <MudStack Row="true">
        <SectionOutlet SectionName="appbar-actions"/>
    </MudStack>
</MudAppBar>

<SectionContent SectionName="appbar-title">
    <MudText Typo="Typo.h5">WireMock Log Viewer</MudText>
</SectionContent>

@code {

    protected override void OnParametersSet() {
        ViewModel = Shell;
        base.OnParametersSet();
    }

    void ToggleDrawer() {
        Shell.IsDrawerOpen = !Shell.IsDrawerOpen;
    }
}
