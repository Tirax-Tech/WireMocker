@inherits ReactiveInjectableComponentBase<MainLayoutViewModel>

<MudAppBar Elevation="1">
    @switch (ViewModel!.AppMode){
        case AppMode.Page:
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ViewModel!.ToggleDrawer"/>
            break;

        case AppMode.Modal m:
            <MudIconButton Icon="@Icons.Material.Filled.Close" Color="Color.Inherit" Edge="Edge.Start"
                           OnClick="@(async () => await m.OnClose.Execute())"/>
            break;
    }
    <SectionOutlet SectionName="appbar-title"/>
    <MudSpacer/>
    <MudStack Row="true">
        <SectionOutlet SectionName="appbar-actions"/>
    </MudStack>
</MudAppBar>

<SectionContent SectionName="appbar-title">
    <MudText Typo="Typo.h5">WireMock Log Viewer</MudText>
</SectionContent>

