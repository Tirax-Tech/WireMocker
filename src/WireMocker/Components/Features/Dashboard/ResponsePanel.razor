@inherits ReactiveComponentBase<ResponsePanelViewModel>

<MudStack>
    <MudStack Row="true" AlignItems="AlignItems.Baseline">
        <MudChip T="string" Color="ViewModel!.StatusCodeColor" Class="pr-2">@ViewModel!.StatusCode</MudChip>
        <MudText Typo="Typo.body2" Color="ViewModel!.StatusCodeColor">@ViewModel!.StatusCodeText</MudText>
    </MudStack>

    <HeaderTable Headers="ViewModel!.Headers" />

    @if (ViewModel!.Body is not null){
        <div class="pa-4 code-panel">
            @ViewModel!.Body
        </div>
    }
</MudStack>